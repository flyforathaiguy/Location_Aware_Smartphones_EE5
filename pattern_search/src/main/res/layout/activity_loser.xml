<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.robin.pattern_search.LoserActivity"
    android:id="@+id/loser"
    android:background="#ff5d1b53">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/youlost"
        android:id="@+id/loseText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="45sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/endgame"
        android:id="@+id/endButton"
        android:layout_below="@+id/loseText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:textSize="35sp"
        android:enabled="true"
        android:clickable="true"
        android:background="#ffb7b7b7" />

</RelativeLayout>
