<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="#EEE"
    android:paddingBottom="0dp" tools:context="be.groept.emedialab.SetupActivity"
    android:id="@+id/test_canvas"
    android:clipChildren="false" >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="0dp"
        android:id="@+id/pattern"
        android:src="@drawable/pattern_coordinate_system"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.5"
        android:contentDescription="@string/pattern_coordinate_system_image_description"/>

    <be.groept.emedialab.util.Axis
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="0dp"
        android:id="@+id/pushpin_device"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pushpin"
       />
</RelativeLayout>
