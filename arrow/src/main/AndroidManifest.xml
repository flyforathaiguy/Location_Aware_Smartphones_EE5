<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.groept.emedialab.arrow">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="be.groept.emedialab.arrow.ArrowMain"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="be.groept.emedialab.arrow.ArrowConnectionActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_arrow_connection"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="be.groept.emedialab.arrow.ArrowGame"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_arrow_game"
            android:theme="@style/FullscreenTheme"></activity>
    </application>

</manifest>
