<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.robin.mastermind.Feedback_activity"
    android:id="@+id/backgroundLayout">

    <ImageView
        android:src="@drawable/ic_action_tick"
        android:layout_width="157dp"
        android:layout_height="152dp"
        android:id="@+id/correct"
        android:layout_toLeftOf="@+id/error"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/colorize"
        android:layout_alignTop="@+id/error" />

    <ImageView
        android:src="@drawable/ic_error"
        android:layout_width="172dp"
        android:layout_height="169dp"
        android:id="@+id/error"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:src="@drawable/ic_colorize"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/error"
        android:layout_alignRight="@+id/error"
        android:layout_alignEnd="@+id/error"
        android:layout_alignLeft="@+id/error"
        android:layout_alignStart="@+id/error"
        android:id="@+id/colorize"
        android:layout_alignBottom="@+id/position" />

    <ImageView
        android:src="@drawable/ic_gps_fixed"
        android:layout_width="172dp"
        android:layout_height="169dp"
        android:id="@+id/position"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/error" />


</RelativeLayout>

