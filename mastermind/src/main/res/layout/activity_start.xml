<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/coverLayout"
    android:background="#ffff980d">
    <ImageView
        android:src="@drawable/mindgame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"/>

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rules"
        android:id="@+id/rules"

        android:background="#ffc8c8c8"
        android:textColor="#fffafff8"

        android:layout_alignTop="@+id/create"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join"
        android:id="@+id/join"
        android:background="#ffc0c0c0"
        android:textColor="#fffffff9"

        android:layout_alignTop="@+id/rules"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NewGame"
        android:id="@+id/create"
        android:background="#ffd0d0d0"
        android:textColor="#fffefff9"
        android:layout_marginBottom="54dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mastermind"
        android:id="@+id/textView"
        android:gravity="center_horizontal"
        style="@style/Theme.AppCompat.Light"
        android:elegantTextHeight="false"
        android:editable="false"
        android:textColor="#ff131313"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp" />
</RelativeLayout>