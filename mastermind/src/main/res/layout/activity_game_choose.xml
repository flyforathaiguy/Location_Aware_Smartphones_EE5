<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#ff000000"
    tools:context=".GameChoose">

    <GridLayout
        android:layout_width="382dp"
        android:layout_height="190dp"
        android:layout_gravity="left|bottom|center_horizontal|right"
        android:background="#ffffffff">

        <ImageView
            android:layout_width="191dp"
            android:layout_height="95dp"
            android:id="@+id/imageViewBLUE"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="top|left"
            android:background="#ff2523ff"
            android:clickable="true" />

        <ImageView
            android:layout_width="191dp"
            android:layout_height="95dp"
            android:id="@+id/imageViewYELLOW"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="top|right"
            android:layout_rowWeight=".50"
            android:layout_columnWeight=".50"
            android:background="#fffdff2b"
            android:clickable="true" />

        <ImageView
            android:layout_width="191dp"
            android:layout_height="95dp"
            android:id="@+id/imageViewGREEN"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="left|bottom"
            android:layout_rowWeight=".50"
            android:layout_columnWeight=".50"
            android:background="#ff6fff35"
            android:clickable="true" />

        <ImageView
            android:layout_width="191dp"
            android:layout_height="95dp"
            android:id="@+id/imageViewRED"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="bottom|right"
            android:layout_rowWeight=".50"
            android:layout_columnWeight=".50"
            android:background="#ffff3029"
            android:clickable="true" />
    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/acceptButton"
        android:layout_gravity="center"
        android:clickable="true"
        android:onClick="acceptButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/positionText"
        android:layout_gravity="center_horizontal|top"
        android:background="#ff84fffa" />

</FrameLayout>